@model IEnumerable<FinalProject.Models.Vouchers>
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">

        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>

        <script src="http://code.jquery.com/jquery-3.3.1.min.js"
                integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
                crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
        <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    </head>

    <body>


        <div class="wrapper">
            <div class="content-wrapper">
                <section class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1>Vouchers List</h1>
                            </div>
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                                    <li class="breadcrumb-item active">Vouchers List</li>
                                </ol>

                            </div>
                        </div>
                    </div>
                </section>
                <section class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <button type="submit" class="btn float-right btn-info shiny" onclick="window.location='@Url.Action("Create", "Vouchers")'"><i class="btn-label glyphicon glyphicon-plus"></i>Add New</button>
                                        <h3 class="card-title"></h3>
                                    </div>

                                    <div class="card-body">
                                        <table id="searchable" class="table table-striped table-bordered table" cellspacing="0" width="100%">
                                            <thead>
                                                <tr>
                                                    <th> Id</th>
                                                    <th> User Name</th>
                                                    <th> Start date</th>
                                                    <th> Expiry Date</th>
                                                    <th> Code </th>
                                                    <th> Discount </th>
                                                    <th> Action </th>


                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (!Model.Any())
                                                {
                                                }
                                                else
                                                {
                                                    foreach (var lst_Vouchers in Model)
                                                    {
                                                <tr>
                                                    <td>@lst_Vouchers.id</td>
                                                    <td>@lst_Vouchers.userid</td>
                                                    <td>@lst_Vouchers.Startdate</td>
                                                    <td>@lst_Vouchers.Expiredate </td>

                                                    <td>@lst_Vouchers.code</td>
                                                    <td>@lst_Vouchers.discount</td>

                                                    <td class=" gap-lg-2 d-md-flex justify-content-md-center">

                                                        <a href="@Url.Action("delete", "Vouchers", new { id = lst_Vouchers.id })" class="btn btn-sm shiny input-xs ml-3  btn-outline-danger fas fa-trash-alt "></a>
                                                    </td>

                                                </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <aside class="control-sidebar control-sidebar-dark">
            </aside>
        </div>
    </body>
    </html>
    <script>
            $(document).ready(function () {
                $('#searchable').DataTable();
            });
    </script>