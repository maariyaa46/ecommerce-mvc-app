<div class="products-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="title-all text-center">
                    <h1>LED's</h1>

                </div>
            </div>
        </div>
        <div class="row special-list">
            @foreach (var item in (List<FinalProject.Models.Product>)@ViewBag.LED)
            {
                <div class="col-lg-3 col-md-6 special-grid best-seller">
                    <div class="products-single fix">
                        <div class="box-img-hover">
                            <img src="@Url.Content(item.path)" alt="" class="img-fluid img-thumbnail">
                            <div class="mask-icon">
                                <ul>
                                    <li><a href="@Url.Action("ViewDetails", "Product1", new { id = item.id })" data-toggle="tooltip" data-placement="right" title="View"><i class="fas fa-eye"></i></a></li>
                                    <li><a href="@(Session["user"]!=null ? Url.Action("WishList","Product1", new {id=@item.id }) :Url.Action("Login","User"))" data-toggle="tooltip" data-placement="right" title="Add to Wishlist"><i class="far fa-heart"></i></a></li>
                                </ul>
                                <a class="cart" href="@(Session["user"] != null ? Url.Action("AddToCart", "Product1", new { id = @item.id}) : Url.Action("Login", "User"))">Add to Cart</a>
                            </div>
                        </div>
                        <div class="why-text">
                            <h4 class="aa-product-title"><a href="#">@item.name</a></h4>
                            <h5>@item.price</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


