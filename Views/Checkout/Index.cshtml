@model IEnumerable<FinalProject.Models.OrderDetail>
    @{ ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout2.cshtml";
    }
    <div class="all-title-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Checkout</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Shop</a></li>
                        <li class="breadcrumb-item active">Checkout</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    @using (Html.BeginForm("PlaceOrder", "Checkout", FormMethod.Post))
    {
    <div class="cart-box-main">
        <div class="container">
            <div class="row">

                <div class="col-sm-6 col-lg-6 mb-3">
                    <div class="checkout-address">
                        <div class="title-left">
                            <h3>Billing address</h3>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="firstName">First name </label>
                                <input name="FirstName" type="text" required placeholder="First Name" onkeypress="return validateName(event)">

                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="lastName">Last name </label>

                                <input name="LastName" type="text" required placeholder="Last Name" onkeypress="return validateName(event)">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="address">Address </label>
                            <textarea name="Address" cols="40" required  placeholder="Address"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="address">Mobile Number</label>
                            <input name="Mobile" type="tel" required placeholder="Mobile">
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="country">City</label>
                                <input name="City" type="text" placeholder="City / Town">
                            </div>
                            <div class="col-md-5 mb-3 mx-5">
                                <label for="state">State </label>
                                <input name="State" type="text" placeholder="City / Town">
                            </div>
                            <div class="col-md-5 mb-3">
                                <label for="zip">Zip Code</label>
                                <input name="PostCode" type="text" placeholder="Postcode / ZIP">
                            </div>
                        </div>
                        <hr class="mb-4">
                        <div class="title"> <span>Payment</span> </div>
                        <div class="d-block my-3">
                            @Html.DropDownList("PayMethod", null, htmlAttributes: new { @class = "form-control", @name = "PaymentMethod" })
                        </div>
                      
                        
                    </div>
                </div>

                <div class="col-sm-6 col-lg-6 mb-3">
                    <div class="row">

                        <div class="col-md-12 col-lg-12">
                            <div class="odr-box">
                                <div class="title-left">
                                    <h3>Shopping cart</h3>
                                </div>
                                <div class="rounded p-2 bg-light">
                                    <div class="media mb-2 border-bottom">
                                        <div class="media-body">
                                            @if (Session["user"] != null)
                                            {
                                                foreach (var item in Model)
                                                {

                                                     <a href="#"> @item.Product.name</a>
                                                    <div class="large text-bold"><span class="mx-2">|</span>@item.quantity <span class="mx-2">|</span> @item.total</div> }
                                                }
                                              else
                                            { <text>Please login to Checkout</text>}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-12">
                            <div class="order-box">
                                <div class="title-left">
                                    <h3>Your order</h3>
                                </div>
                                <div class="d-flex">
                                    <div class="font-weight-bold">Product</div>
                                    <div class="ml-auto font-weight-bold">Total</div>
                                </div>
                                <hr class="my-1">
                                <div class="d-flex">
                                    <h4>Sub Total</h4>
                                    <div class="ml-auto font-weight-bold">@ViewBag.SubTotal</div>
                                </div>
                                
                                <hr class="my-1">


                                <div class="d-flex">
                                    <h4>Shipping Cost</h4>
                                    <div class="ml-auto font-weight-bold"> Free </div>
                                </div>
                                <hr>
                                <div class="d-flex gr-total">
                                    @Html.Hidden("totalAmount", null, new { @value = ViewBag.TotalAmount })
                                    <h5>Grand Total</h5>
                                    <div class="ml-auto h5"> @ViewBag.TotalAmount </div>
                                </div>
                                <hr>
                            </div>
                        </div>
                        <div class="col-12 d-flex shopping-box">  <input type="submit" value="Place Order" class="btn btn-success fs-2"> </div>
                    </div>
                </div>



                    </div>
                </div>
            </div>


        }
<footer>
    <div class="footer-main">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-12 col-sm-12">
                    <div class="footer-widget">
                        <img src="~/Content/images/logo2.png" alt="Cool green dress with red bell" class="img-responsive" width="260" height="90">
