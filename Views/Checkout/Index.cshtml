</footer>

<script>
    function validateName(event) {
        var keyCode = event.keyCode;

        //checks uppercase, lower case, space, hypen
        if ((keyCode >= 65 && keyCode <= 90) || (keyCode >= 97 && keyCode <= 122) || keyCode === 32 || keyCode === 45) {
            return true;
        } else {
            event.preventDefault();
            return false;
        }
    }</script>