@model FinalProject.Models.User
@{ Layout = "~/Views/Shared/_Layout2.cshtml";
}
@using (Html.BeginForm("Login", "User", FormMethod.Post, new { @id = "loginForm" }))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row">
            <div class="col-md-9 col-lg-6 col-xl-5 mt-5">
                <img src="~/Content/images/login.png" class="img-fluid" alt="Sample image">
            </div>

            <div class="col-md-6 contents" style="padding-top:80px;">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="mb-4">

                            <p class="large fw-bold mb-4"><b>Sign in to your Account</b></p>
                        </div>
                        <form>
                            <div class="form-group ">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <b>Email</b>
                                <div class="input-group">

                                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @name = "username", @placeholder = "Username" } })
                                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger " })
                                </div>
                            </div>
                            <br />
                            <div class="form-group ">
                                <b>Password</b>
                                <div class="input-group">

                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @name = "password", @type = "password", @placeholder = "Password" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                                </div>
                            </div>

                            <div class="form-group mt-6">
                                <div class="input-group ">
                                    <span>Admin  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>  @Html.RadioButtonFor(model => model.type, "Admin")
                                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    <span>Customer &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; </span>  @Html.RadioButtonFor(model => model.type, "Customer")

                                </div>
                            </div>

                            <div class="checkbox mt-3">
                                <label class="">
                                    <input id="login-remember" type="checkbox" name="remember" value="1"> Remember me
                                </label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

                            </div>
                            <div class="col-md-12 mt-3">
                                <button type="submit" class="btn btn-primary btn-lg"
                                        style="padding-left: 2.5rem; padding-right: 2.5rem;">
                                    Sign In
                                </button>
                                <p class="large fw-bold mt-2 pt-1 mb-0">
                                    Don't have an account? <a href="@Url.Action("Register", "User" )" class="link-danger">Register</a>
                                </p>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


}


<script src="~/Scripts/bootstrap.bundle.js"></script>
    <script src="~/Content/js/bootstrap.js"></script>

