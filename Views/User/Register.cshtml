@model FinalProject.Models.User
@{ Layout = "~/Views/Shared/_Layout2.cshtml";
}

@if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
{
    if (ViewBag.Message != null)
    {
        <div class="alert alert-success">
            <strong>Success!</strong>@ViewBag.Message
        </div>
    }
}
else
{
    using (Html.BeginForm("Register", "User", FormMethod.Post, new { @id = "loginForm" }))
    {
        @Html.AntiForgeryToken()
        <div class="container">
            <div class="row">
                <div class="col-md-9 col-lg-6 col-xl-5 mt-5">
                    <img src="~/Content/images/login.png" class="img-fluid" alt="Sample image">
                </div>
                <div class="col-md-6 contents" style="padding-top:80px;">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <div class=" mb-4">
                                <p class="mb-4">Sign up Now </p>
                            </div>
                            <form>
                                <div class="form-group first">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <b>Name</b>
                                    <div class="input-group">

                                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", @name = "username", @placeholder = "Enter name" } })
                                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger " })
                                    </div>
                                </div>
                                <div class="form-group first">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <b>Email</b>
                                    <div class="input-group">

                                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @name = "username", @placeholder = "Enter email" } })
                                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger " })
                                    </div>
                                </div>

                                <div class="form-group last mb-4">
                                    <b>Password</b>
                                    <div class="input-group">

                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @name = "password", @type = "password", @placeholder = "Password" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                                <div class="form-group last mb-4">
                                    <b>Confirm Password</b>
                                    <div class="input-group">

                                        @Html.EditorFor(model => model.confirm, new { htmlAttributes = new { @class = "form-control", @name = "confirm password", @type = "password", @placeholder = "Confirm Password" } })
                                        @Html.ValidationMessageFor(model => model.confirm, "", new { @class = "text-danger" })


                                    </div>
                                </div>
                                <div class="form-group last mb-4">
                                    <div class="input-group ">
                                        <span>Admin  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>  @Html.RadioButtonFor(model => model.type, "Admin")
                                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                        <span>Customer &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; </span>  @Html.RadioButtonFor(model => model.type, "Customer")

                                    </div>
                                </div>
                                <div class="col-md-12 mt-3">
                                    <button type="submit" class="btn btn-primary btn-lg"
                                            style="padding-left: 2.5rem; padding-right: 2.5rem;">
                                        Sign Up
                                    </button>


                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        if (ViewBag.Message != null)
        {
            <div class="alert alert-danger">
                <strong>Error!</strong>@ViewBag.Message
            </div>
        }
    }
}
<div class="mb-8">
    @Html.ActionLink("Back to Login", "Login")
</div>



