
@model FinalProject.Models.Product
@{ ViewBag.Title = "Confirm Delete Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<Div class="wrapper">
    <div class="content-wrapper">
        <div class="col-md-12">
            @using (Html.BeginForm("Delete", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(x => x.id)
                @Html.AntiForgeryToken()
                <section class="section about-section gray-bg" id="about">
                    <div class="container">
                        <div class="row align-items-center flex-row-reverse">
                            <div class="col-lg-8">
                                <div class="about-text go-to">
                                    <h2 class="dark-color text-danger">Confirm to Delete Product </h2>
                                    <hr />
                                    <h3 class="theme-color lead fs-2">@Model.name</h3>
                                    <div class="col-md-12">
                                        <label class="fs-4">Product Description</label>
                                        <p style="text-align:justify;">@Model.description</p>
                                    </div>
                                    <div class="row about-list">
                                        <div class="col-md-6">
                                            <div class="media">
                                                <label class="fs-4"> Price</label>
                                                &nbsp;
                                                <p>@Model.price</p>
                                            </div>

                                        </div>
                                        <div class="col-md-6">
                                            <div class="media">
                                                <label class="fs-4"> Stock</label>
                                                &nbsp;
                                                <p>@Model.stocklevel</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 @*d-flex justify-content-end*@">
                                <div class="about-avatar">
                                    <img src="@Url.Content(Model.path)" title="No Image" alt="" width="250" height="250">
                                </div>
                            </div>
                        </div>
                        <div class="counter mt-4">
                            <div class="row">
                                <div class="col-6 col-lg-3">
                                    <a href="@Url.Action("Index", "Product")" class="btn btn-info btn-sm fs-4"><i class="fa-regular fa-hand-back-point-left"></i> Back to the list</a>
                                </div>
                                <div class="col-6 col-lg-3">
                                    <button type="submit" class="btn btn-danger fs-4">&nbsp;Confirm Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>}
        </div>
    </div>
</Div>



