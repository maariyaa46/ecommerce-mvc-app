@model FinalProject.Models.Category
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Save", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="wrapper">
        <div class="content-wrapper">
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>Register Category</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Category</a></li>
                                <li class="breadcrumb-item active">New</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </section>
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">

                            <div class="card">


                                <div class="card-header">
                                    <button type="button" class="btn float-right btn-info shiny" onclick="window.location='@Url.Action("Index", "Category")'"><i class="btn-label glyphicon glyphicon-plus"></i>View List</button>
                                    <h3 class="card-title"></h3>
                                </div>

                                <div class="card-body">
                                    <div class="row ">
                                        <div class="col-md-10 mx-5 my-2">
                                            <b> Name</b>
                                            @Html.TextBoxFor(m => m.name, new { @class = "form-control input-lg", required = "required" })
                                        </div>


                                        <br />
                                      
                                    </div>
                                    <div>
                                        <div class="col-sm-3 mx-5 my-3">
                                            @Html.HiddenFor(m => m.id)
                                            <button type="submit" class="btn btn-outline-success my-2 "><i class="fas fa-save"></i> Save</button>
                                        </div>


                                    </div>





                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <aside class="control-sidebar control-sidebar-dark">
        </aside>

    </div>
}
